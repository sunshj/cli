{
  "name": "playground",
  "private": true,
  "type": "module",
  "license": "ISC",
  "main": "src/index.js",
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "config": "tsx ../src/index.ts config",
    "config-w": "tsx ../src/index.ts config -w"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "18.6.3",
    "@sunshj/eslint-config": "2.2.1",
    "@sunshj/prettier-config": "1.0.2",
    "@types/node": "latest",
    "commitlint": "18.6.1",
    "eslint": "^9.10.0",
    "lint-staged": "15.4.3",
    "prettier": "^3.5.1",
    "simple-git-hooks": "^2.11.1"
  },
  "engines": {
    "node": ">= 18"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,json,md,yaml}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": "@sunshj/prettier-config",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no-install commitlint --config commitlint.config.js --edit $1"
  }
}
