{
  "name": "sunshj",
  "version": "1.3.4",
  "description": "CLI tool for simplifying project creation and configuration",
  "type": "module",
  "license": "MIT",
  "author": "sunshj",
  "files": [
    "bin",
    "dist"
  ],
  "bin": {
    "sun": "bin/cli.mjs",
    "sunshj": "bin/cli.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:update": "vitest -u",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@clack/prompts": "0.10.0",
    "citty": "0.1.6",
    "consola": "3.4.0",
    "defu": "6.1.4",
    "fast-npm-meta": "0.3.1",
    "giget": "2.0.0",
    "jsonc-parser": "3.3.1",
    "nypm": "0.6.0",
    "ofetch": "1.4.1",
    "tinyexec": "0.3.2",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "18",
    "@sunshj/eslint-config": "^2.2.2",
    "@sunshj/prettier-config": "^1.0.2",
    "@types/node": "^18",
    "bumpp": "^9.4.1",
    "commitlint": "18",
    "eslint": "^9.10.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.2.4",
    "typescript": "5.5.3",
    "vitest": "^3.0.5"
  },
  "pnpm": {
    "overrides": {
      "is-core-module": "npm:@nolyfill/is-core-module@^1",
      "safe-buffer": "npm:@nolyfill/safe-buffer@^1"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no-install commitlint --config commitlint.config.js --edit $1"
  },
  "lint-staged": {
    "*.{js,ts,md,json,yaml}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": "@sunshj/prettier-config"
}
